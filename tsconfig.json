{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es2016",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "typeRoots": [
            "node_modules/@types",
            "types"
        ],
        "paths": {
            "@root/*": ["./*"],
            "@server/*": ["server/*"],
            "@data/*": ["data/*"],
            "@utility/*": ["utility/*"]
        }
    }
}
