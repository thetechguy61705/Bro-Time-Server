{
	"env": {
		"es6": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"parser": "babel-eslint",
	"parserOptions": {
		"sourceType": "module"
	},
	"plugins": [
		"json"
	],
	"rules": {
		"max-len": [
			"error", {
				"code": 200
			}
		],
		"line-comment-position": [
			"error",
			"above"
		],
		"indent": [
			"error",
			"tab"
		],
		"no-trailing-spaces": [
			"error"
		],
		"comma-spacing": "error",
		"linebreak-style": [
			"error",
			"windows"
		],
		"quotes": [
			"error",
			"double"
		],
		"semi": [
			"error",
			"always"
		],
		"no-console": "warn"
	}
}
